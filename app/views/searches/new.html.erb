<content>
  <h2>Search</h2>

  <%= form_with model: @search, url: new_search_path, method: :get, local: true do |f| %>
    <h3>Criterita</h3>
    <%= render 'shared/errors', object: @search %>
    <%= f.text_field :near %>
    <%= f.date_field :start_at %>
    <%= f.date_field :end_at %>
    <%= f.submit 'Search' %>
  <% end %>

  <% if @units %>
  <h3>Results</h3>
  <ul id="results">
    <% for unit in @units do %>
    <li>
      <%= link_to unit.address, guests_unit_path(unit) %>
      <%= link_to "reserve", new_guests_reservation_path(reservation: {unit_id: unit, start_at: @search.start_at, end_at: @search.end_at }) %>
    </li>
    <% end %>
  </ul>
  <% end %>

</content>
